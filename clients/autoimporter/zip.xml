<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0
          http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>install</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>autoimporter-swing-ui/target</directory>
            <outputDirectory>/ui</outputDirectory>
            <includes>
                <include>lib/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../raw-file-reader/lib/jniwrap.dll</source>
            <outputDirectory>/service/lib</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../raw-file-reader/lib/jniwrap64.dll</source>
            <outputDirectory>/service/lib</outputDirectory>
        </file>
        <file>
            <source>autoimporter-swing-ui/target/${exeFileName}.exe</source>
            <outputDirectory>/ui</outputDirectory>
        </file>
        <file>
            <source>autoimporter-swing-ui/target/autoimporter-swing-ui-1.0.jar</source>
            <outputDirectory>/ui</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/autoimporter-os-service-${project.version}.jar</source>
            <outputDirectory>/service</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/procrun/amd64/prunsrv.exe</source>
            <outputDirectory>/service/amd64</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/procrun/ia64/prunsrv.exe</source>
            <outputDirectory>/service/ia64</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/procrun/start.bat</source>
            <outputDirectory>/service</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/procrun/stop.bat</source>
            <outputDirectory>/service</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/procrun/uninstall.bat</source>
            <outputDirectory>/service</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/procrun/prunsrv.exe</source>
            <outputDirectory>/service</outputDirectory>
        </file>
        <file>
            <source>autoimporter-os-service/target/classes/README.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../desktop-clients-common/target/classes/VERSION.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
